<h1>Complaints</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>specialty_id</th>
      <th>specialty name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.name %></td>
        <td><%= complaint.specialty_id %></td>
        <td><% complaint.specialty.doctors.each do |doctor| %>
            <li>
              <%= doctor.name %>
            </li>
            <% end %>
        </td>
        <td><%= link_to 'Make an appointment', new_appointment_path(:specialty_id => complaint.specialty_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
